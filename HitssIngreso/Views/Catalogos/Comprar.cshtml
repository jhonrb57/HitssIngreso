@model HitssIngresoBusinessLogic.Models.Producto

@{
    ViewBag.Title = "Comprar";
}

<h2>Comprar</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.CodigoProducto)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.CodigoProducto)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.NombreProducto)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.NombreProducto)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Imagen)
            </dt>

            <dd>
                <img src="@Url.Action("GetImagen", "Productos", new { id = Model.IdProducto })" width="100" height="100" />
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Precio)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Precio)
            </dd>

            <dt>
                @Html.DisplayName("Cliente")
            </dt>

            <dd>
                @Html.DropDownList("IdCliente", ViewBag.Clientes as SelectList, "Seleccione un cliente", new { @class = "form-control" })
            </dd>

        </dl>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Comprar" class="btn btn-dark" />
        </div>
    </div>

    @Html.Hidden("IdProducto")
}
<p>
    @Html.ActionLink("Volver", "Index")
</p>
